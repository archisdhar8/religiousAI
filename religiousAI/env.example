# ===========================================
# Divine Wisdom Guide - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values:
#   cp env.example .env
#
# NEVER commit .env to version control!
# ===========================================

# ------------------------------------------
# LLM Provider Settings
# ------------------------------------------
# Options: "gemini" (cloud) or "ollama" (local)
LLM_PROVIDER=gemini

# Google Gemini API Key (get from https://aistudio.google.com/)
GEMINI_API_KEY=your-api-key-here

# Gemini Model (recommended: models/gemini-2.0-flash)
GEMINI_MODEL=models/gemini-flash-latest

# ------------------------------------------
# Supabase Settings (optional - for database)
# ------------------------------------------
# Get these from your Supabase project dashboard
# Leave blank to use file-based storage
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# ------------------------------------------
# Optional Settings
# ------------------------------------------
# Set to "true" for detailed debug logging
DEBUG=false
